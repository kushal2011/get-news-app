<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/article_thumbnail"
        android:layout_width="@dimen/article_image_width"
        android:layout_height="@dimen/news_thumbnail_height"
        android:paddingRight="@dimen/news_thumbnail_padding_right"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/title_margin_left"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_section_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textSize="@dimen/news_body_size" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/news_article_padding_bottom"
            android:text="Title"
            android:textSize="@dimen/news_title_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>